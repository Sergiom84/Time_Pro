# Configuración de Correo Electrónico para Notificaciones
# Para Gmail, necesitas generar una "Contraseña de aplicación" en:
# https://myaccount.google.com/apppasswords
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=tu_correo@gmail.com
MAIL_PASSWORD=tu_contraseña_de_aplicacion
MAIL_DEFAULT_SENDER=tu_correo@gmail.com

# URL de la aplicación (para incluir en correos)
APP_URL=http://localhost:5000

# Configuración de entorno
FLASK_ENV=development

# Clave secreta para sesiones (genera una aleatoria con: python -c "import os; print(os.urandom(24).hex())")
SECRET_KEY=tu_clave_secreta_aleatoria_aqui

# Plan de la aplicacion (lite o pro)
APP_PLAN=pro

# Configuración de Base de Datos (Supabase PostgreSQL)
# IMPORTANTE: Usa Transaction Pooler (puerto 6543) para mejor rendimiento
# La configuración SSL está manejada automáticamente en main.py (sslmode=require)
# Formato: postgresql://postgres.PROJECT_ID:PASSWORD@aws-X-REGION.pooler.supabase.com:6543/postgres
# Si tu contraseña tiene @ u otros caracteres especiales, URL-encodéalos (@ = %40)
# Ejemplo: postgresql://postgres.abcdefg:PASSWORD@aws-1-eu-west-1.pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.tu_project_id:tu_password@aws-1-eu-west-1.pooler.supabase.com:6543/postgres

# Configuración de Supabase API y Storage
# Obtén estos valores en: Supabase Dashboard > Settings > API
SUPABASE_URL=https://tu_project_id.supabase.co
SUPABASE_ANON_KEY=tu_anon_key_aqui
SUPABASE_SERVICE_ROLE_KEY=tu_service_role_key_aqui
